<div class="row">
<%= form_for(@user, :url => {:controller => 'users', :action => 'create_contact'}, :html => {:class => "form-horizontal"}) do |f| %>

  <% if @user.errors.any? %>
    <%= printErrors(@user) %>
  <% end %>

  <div class="control-group">
    <label class="control-label"><%= f.label t('user.name') %></label>
    <div class="controls">
        <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label"><%= f.label t('user.email') %></label>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label"><%= f.label t('user.skype') %></label>
    <div class="controls">
        <%= f.text_field :skype %>
    </div>
  </div>

  <%= f.hidden_field :client_id, :value => @user.client_id %>
  <%= f.hidden_field :language, :value => @client.language %>

  <div class="control-group">
    <div class="controls">
      <%= button_tag t('user.new'), :type => :submit, :class => "btn btn-large btn-inverse"%>
    </div>
  </div>
<% end %>
</div>
