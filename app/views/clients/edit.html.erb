<%= printErrors(@client) %>

<div class="row">
  <div class="span4 offset1">
    <h3>Edit <%= @client.name %></h3>
  </div>
</div>

<div class="row">
  <%= form_for @client, :url=> {:controller => 'clients', :action =>'update'}, :html => {:multipart => true, :class => "form-horizontal"} do |f|%>
  <div class="control-group">
    <label class="control-label" for="inputName"><%= t('general.name') %></label>
    <div class="controls">
      <%=f.text_field :name, :placeholder => "#{t('general.name')}"%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputImage"><%= t('general.image') %></label>
    <div class="controls">
      <%=f.file_field :image%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label"><%= t('general.language') %></label>
    <div class="controls">
      <%= f.select(:language, options_for_select(language_opts, @client.language)) %>
    </div>
  </div>
  <div class="control-group guardar-cliente">
    <div class="controls">
      <%= button_tag t('client.modify'), :type => :submit, :class=>"btn btn-large btn-inverse"%>
    </div>
  </div>
  <%end%>
</div>
